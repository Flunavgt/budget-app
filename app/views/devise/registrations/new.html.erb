
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="top_login">
<%= link_to '<', root_path, class:"back_logo" %>
<h2>Sign up</h2>
<%= f.submit "NEXT", class: 'loginBtnTop', style: 'color: white; background-color: #3778c2; border: none;' %>
</div>

  
<div class="body_login">
  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: 'field_input' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email", placeholder: "Email",
        class: 'field_input' %>
  </div>

  <div class="field">
   
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password minimum 6 Charcters",
        class: 'field_input' %>
  </div>

  <div class="field">
  
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation",
        class: 'field_input' %>
  </div>

  <div class="field">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
<% end %>
</div>

