
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="top_login">
<button><%= link_to "Back to Log in", new_session_path(resource_name),
             class: "sign_up_btn" %></button>
<h2>Sign up</h2>
<%= f.submit "Sign up" %>
</div>

  
<div class="body_login">
  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: 'field_input' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email", placeholder: "Email",
        class: 'field_input' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password",
        class: 'field_input' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation",
        class: 'field_input' %>
  </div>

  <div class="field">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
<% end %>
</div>

