
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="top_login">
<%= link_to '<', root_path, class:"back_logo" %>
<h2>Log in</h2>
<%= f.submit "NEXT", class: 'loginBtnTop', style: 'color: white; background-color: #3778c2; border: none;' %>
</div>
<div class="body_login">
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",
        class: 'field_input' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password",
        class: 'field_input' %>
  </div>


  <% end %>
  <div class='forgetPassdiv'>
 <%= link_to "Forgot password?", new_password_path(resource_name), class: "forgot_pass", style: 'margin-left: 42%;' %>
  </div>
</div>
