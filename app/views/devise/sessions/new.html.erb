
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="top_login">
<button><%= link_to "Sign up", new_registration_path(resource_name),
          class: "sign_up_btn" %></button>
<h2>Log in</h2>
<%= f.submit "Log in" %>
</div>
<div class="body_login">
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",
        class: 'field_input' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password",
        class: 'field_input' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <% end %>

 <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot_pass" %>

</div>
