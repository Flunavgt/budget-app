<div class="categories" >


<div class="categories-list">
  <% @categories.includes([:user]).order('created_at DESC').each do |category| %>
    <% if can? :manage, category %>
        <%= render category %>
    <% end %>
  <% end %>
</div>

</div>

<button class="newCatBtn">
<div class="insideBtn">
<%= link_to "New Category", new_category_path, class: 'newCatbtntext' %>
</div>
</button>

