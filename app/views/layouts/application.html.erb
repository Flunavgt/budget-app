<!DOCTYPE html>
<html>
  <head>
    <title>BudgetApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <%if user_signed_in? %>
  <nav class="nav-section-name">
       <% if current_page?(root_path) || current_page?(controller: "categories", action: "index") %>
      
        <%= image_tag ("/assets/hamburger.png"), class: "hamburger-img" %>
        <h2>CATEGORIES</h2>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: 'sign-out' %>

      <% elsif current_page?(controller: "categories", action: "new")%>
      
        <%= link_to '<', categories_path, class:"back_logo" %>
        <h2>NEW CATEGORY</h2>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: 'sign-out' %>

      <% else %>
      
        <%= link_to '<', categories_path, class:"back_logo" %>
        <h2>Expenses</h2>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: 'sign-out' %>
      
      <% end %>
  </nav> <br>
  <% end %>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
